# Local dev MinIO + S3 driver
STORAGE_DRIVER=s3
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ENDPOINT=http://minio:9000
STORAGE_S3_KEY=minioadmin
STORAGE_S3_SECRET=minioadmin
STORAGE_S3_BUCKET_SOURCE=task-source
STORAGE_S3_BUCKET_DOCUMENT=task-documents
STORAGE_S3_BUCKET_CHUNK=task-chunks
STORAGE_S3_BUCKET_AVATAR=task-avatars

# Local storage roots used by app containers (/var/www/task/var/storage/* inside container)
SOURCE_STORAGE_DIR=./var/storage/source
DOCUMENT_STORAGE_DIR=./var/storage/documents
CHUNK_STORAGE_DIR=./var/storage/chunks
AVATAR_STORAGE_DIR=./var/storage/avatars

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DATA_ROOT=./var/minio-data
