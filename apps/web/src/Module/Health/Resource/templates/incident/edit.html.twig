{% extends '@web.health/base.html.twig' %}

{% block title %}Edit Incident{% endblock %}

{% block content %}
<div class="container-small px-3 px-lg-7 px-xxl-3 py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path(incidentRoute.LIST) }}">Incidents</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <h1 class="mb-4">Edit Incident</h1>

    <div class="card mb-4">
        <div class="card-header">
            Incident Details
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, { attr: { class: 'form-control', rows: 4 } }) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(form.status) }}
                    </div>

                    <div class="col-md-6 mb-3">
                        {{ form_label(form.severity) }}
                        {{ form_widget(form.severity, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(form.severity) }}
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Affected Services</label>
                    <div id="services-container">
                        {% for service in incident.affectedServiceNames %}
                        <div class="input-group mb-2">
                            <input type="text" class="form-control" name="affectedServiceNames[]" value="{{ service }}">
                            <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">
                                <span class="icon" data-feather="x"></span>
                            </button>
                        </div>
                        {% else %}
                        <div class="input-group mb-2">
                            <input type="text" class="form-control" name="affectedServiceNames[]" placeholder="Service name (e.g., postgresql, api)">
                            <button type="button" class="btn btn-outline-secondary" onclick="addServiceField()">
                                <span class="icon" data-feather="plus"></span>
                            </button>
                        </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary mt-2" onclick="addServiceField()">
                        <span class="icon" data-feather="plus"></span> Add Service
                    </button>
                </div>

                <div class="d-flex gap-2">
                    {{ form_widget(form.submit, { attr: { class: 'btn btn-primary' } }) }}
                    <a href="{{ path(incidentRoute.LIST) }}" class="btn btn-outline-secondary">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="card">
        <div class="card-header text-muted">
            Metadata
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">UUID</dt>
                <dd class="col-sm-9"><code>{{ incident.uuid }}</code></dd>

                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">{{ incident.createdAt|date('Y-m-d H:i:s T') }}</dd>

                {% if incident.updatedAt %}
                <dt class="col-sm-3">Updated</dt>
                <dd class="col-sm-9">{{ incident.updatedAt|date('Y-m-d H:i:s T') }}</dd>
                {% endif %}

                {% if incident.resolvedAt %}
                <dt class="col-sm-3">Resolved</dt>
                <dd class="col-sm-9">{{ incident.resolvedAt|date('Y-m-d H:i:s T') }}</dd>
                {% endif %}
            </dl>
        </div>
    </div>
</div>

<script>
function addServiceField() {
    const container = document.getElementById('services-container');
    const div = document.createElement('div');
    div.className = 'input-group mb-2';
    div.innerHTML = `
        <input type="text" class="form-control" name="affectedServiceNames[]" placeholder="Service name">
        <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">
            <span class="icon" data-feather="x"></span>
        </button>
    `;
    container.appendChild(div);
    if (typeof feather !== 'undefined') {
        feather.replace();
    }
}
</script>
{% endblock %}
